{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "agblocks/curvy",
  "version": "0.1.0",
  "title": "Curvy Block",
  "category": "design",
  "icon": "smiley",
  "description": "Divider shape with customisable curve.",
  "example": {
    "innerBlocks": [
      {
        "name": "core/heading",
        "attributes": {
          "content": "Curvy Block"
        }
      },
      {
        "name": "core/paragraph",
        "attributes": {
          "content": "This is an example curvy block"
        }
      }
    ]
  },
  "supports": {
    "html": false,
    "color": {
      "background": true,
      "link": true,
      "text": true
    },
    "spacing": {
      "padding": true
    },
    "align": [
      "wide",
      "full"
    ]
  },
  "attributes": {
    "style": {
      "type": "object",
      "default": {
        "color": {
          "background": "#fb2e00"
        },
        "spacing": {
          "padding": {
            "top": "70px",
            "right": "70px",
            "bottom": "70px",
            "left": "70px"
          }
        }
      }
    },
    "enableTopCurve": {
      "type": "boolean",
      "default": true
    },
    "topWidth": {
      "type": "number",
      "default": 100
    },
    "topHeight": {
      "type": "number",
      "default": 100
    },
    "topFlipHorizontal": {
      "type": "boolean",
      "default": false
    },
    "topFlipVertical": {
      "type": "boolean",
      "default": false
    },
    "topColor": {
      "type": "string",
      "default": "#ffffff"
    },
    "enableBottomCurve": {
      "type": "boolean",
      "default": true
    },
    "bottomWidth": {
      "type": "number",
      "default": 100
    },
    "bottomHeight": {
      "type": "number",
      "default": 100
    },
    "bottomFlipHorizontal": {
      "type": "boolean",
      "default": false
    },
    "bottomFlipVertical": {
      "type": "boolean",
      "default": false
    },
    "bottomColor": {
      "type": "string",
      "default": "#ffffff"
    }
  },
  "textdomain": "custom-blocks",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "render": "file:./render.php"
}